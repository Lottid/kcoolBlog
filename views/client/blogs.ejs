<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html" charset="UTF-8">
			<link rel="stylesheet" href="lib/bootstrap/css/bootstrap.min.css">
	<link rel="stylesheet" href="lib/bootstrap/css/bootstrap-theme.min.css">
			<link rel="stylesheet"  href="css/style2.css" type="text/css" media="all">
	<script type="text/javascript" src="js/sort.js"></script>
	<script type="text/javascript"  src="lib/jquery/jquery-2.1.1.min.js"></script>
	<link rel="stylesheet"  href="css/style2.css" type="text/css" media="all">
</head>
<body>
<%- include header %>
	<!-- 中间部分开始 -->
	<div id="contion">
		<div id="contents">
			<div class="main clearfix">
				<div id="sidebar-wrap" class="clearfix">
					<div id="sticky" class="clearfix">
						<h2 class="sticky-title">归档</h2>
						<table class="table table-striped"  style="color:#666;font-size:18px;">
						<% PostRiqi.forEach(	function(PostRiqi){%>
							<tr>
				  				<td class="td_juzhong">
									<a href="./sorts/riqi_dates_to_sort?riqi_dates='.$item2-> kt_riqi_dates);?>">
										<%= PostRiqi.kt_riqi_dates %>
									</a>
								</td>
							</tr>
						<% });%>
						</table>
					</div>
				</div>
				<div id="content2" class="filter-posts">
					<% PostGet_all.forEach(	function(PostGet_all){%>
					<div class="post clearfix">
						<div class="box">
							<div class="shadow clearfix">
								<div class="frame">
									<h2 class="entry-title">
										<a href="./index/title_to_content?blogs_ids='.$item-> kt_blogs_ids.'&tags_ids='.$item-> kt_tags_ids);?>" title="#"  target="_blank" ><%= PostGet_all.kt_blogs_titles %></a>
									</h2>
									<p><%- PostGet_all.kt_blogs_contents.substring(0,100) %>

										...
									</p>
								</div>
							</div>
							<div class="bar" >
								<div class="bar-frame clearfix">
									<div class="date">
										<strong class="day"><%= PostGet_all.kt_blogs_ri %></strong>
										<div class="holder">
											<span class="month"><%= PostGet_all.kt_blogs_yue %></span>
											<span class="year"><%= PostGet_all.kt_blogs_year %></span>
										</div>
									</div>
									<div class="author">
										<strong class="title">标签</strong>
										<a href="./index/tags_to_sort?tags_ids='.$item-> kt_tags_ids);?>" title="#" rel="external"><%= PostGet_all.kt_tags_name %></a>
									</div>
								</div>
							</div>
						</div>
					</div>
					<% });%>
					<div class="post clearfix">
						<div class="box" id="pagination">
							<%- Create_links %>
						</div>
					</div>
					<div style="clear:both;"></div>
				</div>
			</div>
		</div>
	</div>
	<script>
		function addClass(){
			var element = document.getElementById("prettyprint");
			element.className += " "+"prettyprint";
		};
		addClass();
	</script>
	<%- include footer %>
</body>
</html>